[flake8]
select = B,B9,C,D,DAR,E,F,N,RST,S,W
ignore = B905,E203,E501,RST201,RST203,RST301,W503,S320,S404,S410,S603
max-complexity = 10
max-line-length = 100
application-import-names = fi_parliament_tools,tests
import-order-style = google
per-file-ignores = tests/*:S101
rst-roles = class,const,func,meth,mod,ref
rst-directives = deprecated
